@using eVoucher
@model DateTime?
<div class="form-group form-md-line-input">
    <label class="control-label col-md-4">
        @if (ViewData["CustomDisplayName"] != null)
        {
            @Html.DisplayName((string)ViewData["CustomDisplayName"])
        }
        else
        {
            @Html.DisplayNameFor(model => model)
        }
        @{
            if (ViewData.ModelMetadata.IsRequired)
            {
                <span class="required">*</span>
            }
        }
    </label>
    <div class="col-md-4">
        <input id="@ViewData.ModelMetadata.PropertyName" name="@ViewData.ModelMetadata.PropertyName" class="form-control bold" size="16" type="text" value="@Model.GetValueOrDefault().ToString(GlobalVariable.DATEFORMAT)" readonly>
    </div>
</div>